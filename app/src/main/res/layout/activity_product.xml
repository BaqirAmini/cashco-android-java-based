<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/products_layout_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bar_border"
        android:weightSum="2"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_products_tab"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:focusable="true"
            android:textColor="@color/txt_selected_tab"
            android:background="@drawable/tab_design"
            android:text="@string/txt_products"/>
        <TextView
            android:id="@+id/txt_categories_tab"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:text="@string/txt_categories"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/prd_floyout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"/>
    <FrameLayout
        android:id="@+id/prd_floyout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prd_floyout1"/>
    <Button
        android:id="@+id/btn_save_edited_product"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@color/txt_selected_tab"
        android:textColor="@color/white_color"
        android:text="@string/btn_save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_large"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_save_edited_category"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@color/txt_selected_tab"
        android:textColor="@color/white_color"
        android:text="@string/btn_save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@+id/btn_save_edited_product"/>
    <Button
        android:id="@+id/btn_add_product"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@color/txt_selected_tab"
        android:textColor="@color/white_color"
        android:text="@string/btn_save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@+id/btn_save_edited_product"/>
</RelativeLayout>