<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:paddingBottom="@dimen/padding"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/cust_detail_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bar_border"
        android:weightSum="2"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_tab_company_profile"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/tab_design"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/txt_comp_profile"
            android:textColor="@color/txt_selected_tab" />
        <TextView
            android:id="@+id/txt_tab_transactions"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:text="@string/txt_transactions"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/cust_detail_flayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cust_detail_bar"
        android:layout_marginTop="@dimen/margin_large"/>
    <Button
        android:id="@+id/btn_save_new_customer"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_save"
        android:background="@color/txt_selected_tab"
        android:textColor="@color/white_color"
        android:layout_marginBottom="@dimen/small_margin"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_enable_edit_comp_profile"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/txt_lbl_edit"
        android:background="@color/txt_selected_tab"
        android:textColor="@color/white_color"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:visibility="gone" />
    <Button
        android:id="@+id/btn_edit_comp_profile"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/btn_save"
        android:background="@color/bg_tabs"
        android:textColor="@color/white_color"
        android:layout_toEndOf="@+id/btn_enable_edit_comp_profile"
        android:layout_marginStart="@dimen/small_margin"
        android:enabled="false"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>