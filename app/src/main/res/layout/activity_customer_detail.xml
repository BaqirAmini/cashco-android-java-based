<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/cust_detail_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bar_border"
        android:weightSum="2"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_tab_company_profile"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:focusable="true"
            android:textColor="@color/txt_selected_tab"
            android:background="@drawable/tab_design"
            android:text="@string/txt_comp_profile"/>
        <TextView
            android:id="@+id/txt_tab_transactions"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:text="@string/txt_transactions"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/cust_detail_flayout"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cust_detail_bar"
        android:layout_marginTop="@dimen/margin_large"/>
</RelativeLayout>