<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:tools2="http://schemas.android.com/tools"
    android:id="@+id/tlayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UselessParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
        <TableRow
            android:id="@+id/trow_label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_border"
            tools2:ignore="UselessParent">
            <TextView
                android:id="@+id/txt_list_cust_bn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Business Name"
                android:background="@drawable/table_border"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_list_cust_id"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:background="@drawable/table_border"
                android:text="ID"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_list_cust_fn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="First Name"
                android:background="@drawable/table_border"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_list_cust_ln"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Last Name"
                android:background="@drawable/table_border"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_list_cust_phone"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Phone"
                android:background="@drawable/table_border"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_list_cust_accb"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Acc. Balance"
                android:background="@drawable/table_border"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_list_cust_status"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Status"
                android:gravity="center"
                android:background="@drawable/table_border"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
