<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="1dp"
    tools:context="com.xamuor.cashco.Views.ProductFragment">
<android.support.v7.widget.SearchView
    android:id="@+id/search_item"
    android:layout_width="1000dp"
    android:layout_height="40dp"
    android:layout_alignStart="@+id/rcv_inventory"
    app:theme="@style/AppSearchView"
    android:focusable="false"
    android:background="@drawable/searchview_design" />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rcv_inventory"
      android:layout_below="@+id/search_item"
      android:layout_width="match_parent"
      android:padding="5dp"
      android:background="@color/white_color"
      android:layout_height="match_parent" />

</RelativeLayout>