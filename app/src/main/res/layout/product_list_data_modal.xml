<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp">
    <android.support.v7.widget.CardView
        android:id="@+id/card_list_product"
        android:layout_width="135dp"
        app:cardElevation="2dp"
        android:layout_height="120dp"
        android:layout_marginBottom="@dimen/small_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/card_padding"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/img_product_list_image"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/cart"
                android:contentDescription="@string/content_desription_product_image" />
            <TextView
                android:id="@+id/txt_product_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textSize="@dimen/card_txt_size"
                android:layout_marginTop="@dimen/small_margin"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>