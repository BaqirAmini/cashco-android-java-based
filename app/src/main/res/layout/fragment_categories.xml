<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_color"
    android:layout_marginEnd="1dp"
    tools:context="com.xamuor.cashco.Views.ProductFragment">
    <android.support.v7.widget.SearchView
        android:id="@+id/search_category"
        android:layout_width="1000dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/category_rv"
        app:theme="@style/AppSearchView"
        android:focusable="false"
        android:background="@drawable/searchview_design" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_category"
        android:padding="5dp"
        android:background="@color/bg_product"/>

</RelativeLayout>
