<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/margin">
    <android.support.v7.widget.SearchView
        android:id="@+id/search_customer_and_places"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/rv_customers"
        app:theme="@style/AppSearchView"
        android:focusable="false"
        android:background="@drawable/searchview_design" />

    <TableLayout
        android:id="@+id/tlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/search_customer_and_places">
        <TableRow
            android:id="@+id/trow_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_label_list_cust_bn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="@string/txt_label_list_cust_bn"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_lbl_list_cust_id"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="@string/txt_lbl_list_cust_id"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_lbl_list_cust_fn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="@string/txt_lbl_list_cust_fn"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_lbl_list_cust_ln"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="@string/txt_lbl_list_cust_ln"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_lbl_list_cust_phone"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="@string/txt_lbl_list_cust_phone"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_lbl_list_cust_accb"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="@string/txt_lbl_list_cust_accb"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_lbl_list_cust_status"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="@string/txt_lbl_list_cust_status"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_customers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tlayout1"
        android:background="@color/white_color"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_customer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        app:fabSize="auto"
        android:scaleType="center"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/txt_selected_tab"
        app:elevation="8dp"
        android:layout_margin="@dimen/margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
