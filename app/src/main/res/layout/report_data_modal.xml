<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">
    <android.support.v7.widget.CardView
        android:id="@+id/card_report"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">
            <LinearLayout
                android:id="@+id/inner_layout_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="7"
                android:padding="@dimen/card_padding">
                    <ImageView
                        android:id="@+id/img_report"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/baqir"/>
                    <TextView
                        android:id="@+id/txt_report_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_weight="1"
                        android:text="Product"/>
                    <TextView
                        android:id="@+id/txt_report_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_weight="1"
                        android:text="Customer"/>
                    <TextView
                        android:id="@+id/txt_report_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_weight="1"
                        android:text="Invoice"/>
                    <TextView
                        android:id="@+id/txt_report_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_weight="1"
                        android:text="Quantity"/>
                    <TextView
                        android:id="@+id/txt_report_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_weight="1"
                        android:text="Payment"/>
                    <TextView
                        android:id="@+id/txt_report_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_weight="1"
                        android:text="Date"/>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>