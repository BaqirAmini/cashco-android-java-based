<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin"
    android:padding="@dimen/padding"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:id="@+id/card_report"
        android:layout_width="500dp"
        android:layout_height="300dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">
       <RelativeLayout
           android:id="@+id/report_inner_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:padding="@dimen/card_padding">
           <TextView
               android:id="@+id/txt_report_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Daily"
               android:textStyle="bold"
               android:textSize="16sp"
               android:layout_marginBottom="@dimen/margin"
               android:layout_centerHorizontal="true"/>
           <TextView
               android:id="@+id/txt_total_sales_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textSize="15sp"
               android:layout_below="@+id/txt_report_lbl"
               android:layout_marginBottom="@dimen/margin"
               android:text="@string/txt_total_sales_lbl"/>
           <TextView
               android:id="@+id/txt_total_sales_value"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/txt_usd_currency"
               android:textStyle="bold"
               android:textSize="15sp"
               android:layout_alignTop="@id/txt_total_sales_lbl"
               android:layout_alignParentEnd="true" />
           <TextView
               android:id="@+id/txt_recieved_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/txt_recieved_lbl"
               android:layout_below="@id/txt_total_sales_lbl"/>
           <TextView
               android:id="@+id/txt_recieved_value"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/txt_usd_currency"
               android:layout_below="@id/txt_total_sales_lbl"
               android:layout_alignParentEnd="true"/>
           <TextView
               android:id="@+id/txt_cash_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/small_margin"
               android:layout_below="@+id/txt_recieved_lbl"
               android:text="@string/txt_cash_lble"/>
           <TextView
               android:id="@+id/txt_cash_value"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/small_margin"
               android:layout_below="@+id/txt_recieved_lbl"
               android:layout_alignParentEnd="true"
               android:text="@string/txt_usd_currency"/>
           <TextView
               android:id="@+id/txt_master_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/small_margin"
               android:layout_below="@+id/txt_cash_lbl"
               android:text="@string/txt_master_lbl"/>
           <TextView
               android:id="@+id/txt_master_value"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/small_margin"
               android:layout_below="@+id/txt_cash_lbl"
               android:layout_alignParentEnd="true"
               android:text="@string/txt_usd_currency"/>
           <TextView
               android:id="@+id/txt_debit_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txt_master_lbl"
               android:layout_marginTop="@dimen/small_margin"
               android:text="@string/txt_debit_lbl"/>
           <TextView
               android:id="@+id/txt_debit_value"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/small_margin"
               android:layout_below="@+id/txt_master_lbl"
               android:layout_alignParentEnd="true"
               android:text="@string/txt_usd_currency"/>
           <TextView
               android:id="@+id/txt_recievable_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/small_margin"
               android:text="@string/txt_recievable_lbl"
               android:layout_below="@id/txt_debit_lbl"/>
           <TextView
               android:id="@+id/txt_recievable_value"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/small_margin"
               android:text="@string/txt_usd_currency"
               android:layout_alignParentEnd="true"
               android:layout_below="@+id/txt_debit_lbl"/>
       </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/img_print_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_print_report"
        android:layout_gravity="center"
        android:contentDescription="@string/print_icon_desc"
        android:layout_marginTop="@dimen/margin"/>

</LinearLayout>
