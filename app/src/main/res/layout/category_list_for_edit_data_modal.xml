<TableLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tbl_product_list_for_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow
        android:id="@+id/tr_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:padding="@dimen/small_margin"
        android:weightSum="4">
        <TextView
            android:id="@+id/txt_category_for_edit"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/txt_category"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_category_desc"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/edit_product_desc"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_category_date"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/txt_balance_date"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_edit_category"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:contentDescription="@string/img_edition_icon" />
    </TableRow>
</TableLayout>