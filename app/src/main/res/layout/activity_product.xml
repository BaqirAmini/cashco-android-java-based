<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/products_layout_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bar_border"
        android:weightSum="2"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_products_tab"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:focusable="true"
            android:textColor="@color/txt_selected_tab"
            android:background="@drawable/tab_design"
            android:text="@string/txt_products"/>
        <TextView
            android:id="@+id/txt_categories_tab"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:text="@string/txt_categories"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/prd_floyout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"/>
    <FrameLayout
        android:id="@+id/prd_floyout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>