<LinearLayout
    android:id="@+id/cust_detail_bar"
    android:layout_width="200dp"
    android:layout_height="40dp"
    android:background="@drawable/bar_border"
    android:weightSum="2"
    android:layout_marginTop="0dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/txt_tab_invoices"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/tab_design"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/txt_invoices"
            android:textColor="@color/txt_selected_tab" />
        <TextView
            android:id="@+id/txt_tab_payments"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:text="@string/txt_payments"/>
    </LinearLayout>

