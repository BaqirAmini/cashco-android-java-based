<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_weight="2"
        android:background="@color/colorBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:baselineAligned="false">
        <!--For two fragments-->
            <LinearLayout
                android:id="@+id/layout_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white_color"
                android:weightSum="5"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_park"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="start"
                    android:textColor="@color/text_color"
                    android:gravity="center"
                    android:text="@string/txt_park"/>
                <TextView
                    android:id="@+id/txt_void"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="@string/txt_void"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:focusable="true" />
                <TextView
                    android:id="@+id/txt_products"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:textColor="@color/text_color"
                    android:background="@drawable/tab_design"
                    android:text="@string/txt_products"/>
                <TextView
                    android:id="@+id/txt_categories"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:text="@string/txt_categories"/>
                <TextView
                    android:id="@+id/txt_keyboard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:text="@string/txt_keyboard"/>
            </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="@dimen/margin"
           android:baselineAligned="false">
           <FrameLayout
               android:id="@+id/frg_invoice"
               android:layout_width="wrap_content"
               android:layout_weight="1"
               android:name="com.xamuor.cashco.Views.InvoiceFragment"
               android:layout_height="wrap_content"/>

           <FrameLayout
               android:id="@+id/frg_product"
               android:name="com.xamuor.cashco.Views.ProductFragment"
               android:layout_width="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"/>

       </LinearLayout>
    </LinearLayout>


