<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableRow
        android:id="@+id/tr_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:weightSum="7">
        <TextView
            android:id="@+id/txt_lbl_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_product"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_supplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_supplier"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_inventory"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_retail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_retail_price"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_created"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_updated"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txt_lbl_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_lbl_edit"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"/>
    </TableRow>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_product_for_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:layout_marginTop="25dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/myFAB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin"
        app:elevation="8dp"
        android:clickable="true"
        android:background="@color/txt_selected_tab"
        android:backgroundTint="@color/txt_selected_tab"
        tools:targetApi="lollipop"
        android:focusable="true" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="New Product"
        android:textColor="#fff"
        app:layout_anchor="@id/myFAB"
        app:layout_anchorGravity="center"/>
</android.support.design.widget.CoordinatorLayout>